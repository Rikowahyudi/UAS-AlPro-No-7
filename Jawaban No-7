public class Main {
    public static void main(String[] args){
        int n = 5;
     
        for (int r = 0; r < n; r++) {
            
            for (int s = 1; s < n - r; s++) {
                System.out.print(" ");
            }
            
            for (int k = 0; k <= r; k++) {
                System.out.print(k);
            }
            System.out.println();
        }
    }
}
